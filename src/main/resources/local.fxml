<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" maxHeight="100.0" minHeight="100.0" prefHeight="100.0" prefWidth="857.0"
            style="-fx-border-color: #EAECEF;" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8.0.171">
    <children>
        <Pane layoutX="14.0" layoutY="13.0" prefHeight="75.0" prefWidth="75.0" style="-fx-border-color: black;">
            <children>
                <ImageView fx:id="imInit" fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true"/>
            </children>
        </Pane>
        <Label fx:id="lblInitAction" layoutX="108.0" layoutY="14.0" text="Init repository">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label fx:id="lblInitDescription" layoutX="108.0" layoutY="41.0" text="Init local repository(Select directory you want to create a repo)" opacity="0.6">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Button fx:id="btnInit" layoutX="648.0" layoutY="27.0" text="Init" onMouseClicked="#initLocalRepository" mnemonicParsing="false" prefHeight="30.0"
                prefWidth="205.0"/>

        <Pane layoutX="14.0" layoutY="101.0" prefHeight="75.0" prefWidth="75.0" style="-fx-border-color: black;">
            <children>
                <ImageView fx:id="imCommit" fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true"/>
            </children>
        </Pane>
        <Label fx:id="lblCommitAction" layoutX="108.0" layoutY="101.0" text="Commit">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label fx:id="lblCommitDescription" layoutX="108.0" layoutY="128.0" text="Commit(Select .git in your repo directory and set commit message)" opacity="0.6">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Button fx:id="btnCommit" layoutX="648.0" layoutY="115.0" text="Commit" onMouseClicked="#commit" mnemonicParsing="false" prefHeight="30.0"
                prefWidth="205.0"/>

        <Pane layoutX="14.0" layoutY="189.0" prefHeight="75.0" prefWidth="75.0" style="-fx-border-color: black;">
            <children>
                <ImageView fx:id="imAdd" fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true"/>
            </children>
        </Pane>
        <Label fx:id="lblAddAction" layoutX="108.0" layoutY="189.0" text="Add file">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label fx:id="lblAddDescription" layoutX="108.0" layoutY="216.0" text="Add file to git repository(Select .git in repository and then select file you want to add)" opacity="0.6">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Button fx:id="btnAdd" layoutX="648.0" layoutY="203.0" text="Add" onMouseClicked="#addToGit" mnemonicParsing="false" prefHeight="30.0"
                prefWidth="205.0"/>

        <Pane layoutX="14.0" layoutY="277.0" prefHeight="75.0" prefWidth="75.0" style="-fx-border-color: black;">
            <children>
                <ImageView fx:id="imPush" fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true"/>
            </children>
        </Pane>
        <Label fx:id="lblPushAction" layoutX="108.0" layoutY="277.0" text="Push to repository">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label fx:id="lblPushDescription" layoutX="108.0" layoutY="304.0" text="Push to remote repository" opacity="0.6">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Button fx:id="btnPush" layoutX="648.0" layoutY="291.0" text="Push" onMouseClicked="#pushToRemoteRepository" mnemonicParsing="false" prefHeight="30.0"
                prefWidth="205.0"/>

    </children>
</AnchorPane>